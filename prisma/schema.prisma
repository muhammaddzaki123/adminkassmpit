// src/database/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum UserRole {
  TREASURER
  ADMIN
  PARENT
  HEADMASTER
}

enum StudentStatus {
  PENDING_REGISTRATION // Calon siswa baru (belum disetujui)
  ACTIVE               // Siswa aktif
  AWAITING_REREG       // Menunggu daftar ulang tahun ajaran baru
  GRADUATED            // Lulus
  ARCHIVED             // Non-aktif/pindah
}

enum PaymentStatus {
  PAID
  PENDING
  UNPAID
  FAILED
  EXPIRED
}

enum PaymentType {
  SPP
  DAFTAR_ULANG
  LAINNYA
}

enum PaymentMethod {
  VIRTUAL_ACCOUNT
  TRANSFER_BANK
  EWALLET
  TUNAI
}

enum ExpenseStatus {
  APPROVED
  PENDING
  REJECTED
}

enum ExpenseCategory {
  GAJI
  ATK
  UTILITAS
  PEMELIHARAAN
  OPERASIONAL
  LAINNYA
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String?  @unique
  password  String
  nama      String
  role      UserRole
  studentId String?  @map("student_id")
  student   Student? @relation(fields: [studentId], references: [id])
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Student {
  id                String        @id @default(uuid())
  nama              String
  nisn              String        @unique
  kelas             String
  noTelp            String?       @map("no_telp")
  email             String?
  alamat            String?
  namaOrangTua      String?       @map("nama_orang_tua")
  status            StudentStatus @default(PENDING_REGISTRATION)
  sppStatus         PaymentStatus @default(UNPAID) @map("spp_status")
  daftarUlangStatus PaymentStatus @default(UNPAID) @map("daftar_ulang_status")
  virtualAccount    String?       @unique @map("virtual_account") // VA number for payments
  
  // Registration fields
  registrationDate  DateTime?     @map("registration_date")
  enrollmentType    String?       @map("enrollment_type") // NEW, CONTINUING, TRANSFER
  academicYear      String?       @map("academic_year") // e.g., "2024/2025"
  approvalStatus    String?       @default("PENDING") @map("approval_status") // PENDING, APPROVED, REJECTED
  approvedBy        String?       @map("approved_by") // User ID who approved
  approvedAt        DateTime?     @map("approved_at")
  registrationFee   Float?        @default(0) @map("registration_fee")
  registrationPaid  Boolean       @default(false) @map("registration_paid")
  
  createdAt         DateTime      @default(now()) @map("created_at")
  updatedAt         DateTime      @updatedAt @map("updated_at")

  sppPayments       SPPPayment[]
  transactions      Transaction[]
  users             User[]

  @@map("students")
}

model SPPPayment {
  id               String        @id @default(uuid())
  studentId        String        @map("student_id")
  student          Student       @relation(fields: [studentId], references: [id])
  bulan            String // e.g., "November 2024" or date
  tahunAjaran      String?       @map("tahun_ajaran") // e.g., "2024/2025"
  nominal          Float
  status           PaymentStatus @default(PENDING)
  tanggalBayar     DateTime?     @map("tanggal_bayar")
  metodePembayaran String?       @map("metode_pembayaran") // transfer, tunai, ewallet
  buktiTransfer    String?       @map("bukti_transfer")
  
  // Auto-tracking fields
  transactionId    String?       @map("transaction_id") // Link to Transaction
  autoRecorded     Boolean       @default(false) @map("auto_recorded") // True if auto from webhook
  recordedAt       DateTime?     @map("recorded_at")
  paymentMethod    PaymentMethod? @map("payment_method")
  
  createdAt        DateTime      @default(now()) @map("created_at")
  updatedAt        DateTime      @updatedAt @map("updated_at")

  @@map("spp_payments")
}

model Expense {
  id          String          @id @default(uuid())
  date        DateTime
  category    ExpenseCategory
  description String
  amount      Float
  status      ExpenseStatus   @default(PENDING)
  receipt     String? // URL to receipt
  createdAt   DateTime        @default(now()) @map("created_at")
  updatedAt   DateTime        @updatedAt @map("updated_at")

  @@map("expenses")
}

model Transaction {
  id                String        @id @default(uuid())
  studentId         String        @map("student_id")
  student           Student       @relation(fields: [studentId], references: [id])
  paymentType       PaymentType   @map("payment_type")
  paymentMethod     PaymentMethod @map("payment_method")
  amount            Float
  adminFee          Float         @default(0) @map("admin_fee")
  totalAmount       Float         @map("total_amount")
  status            PaymentStatus @default(PENDING)
  externalId        String?       @unique @map("external_id") // ID from payment gateway
  vaNumber          String?       @map("va_number") // Virtual Account number
  expiredAt         DateTime?     @map("expired_at")
  paidAt            DateTime?     @map("paid_at")
  description       String?
  bulan             String? // For SPP payments
  tahunAjaran       String?       @map("tahun_ajaran")
  buktiPembayaran   String?       @map("bukti_pembayaran") // Receipt URL
  createdAt         DateTime      @default(now()) @map("created_at")
  updatedAt         DateTime      @updatedAt @map("updated_at")

  @@map("transactions")
}

model SystemSettings {
  id          String   @id @default(uuid())
  key         String   @unique // e.g., "REGISTRATION_FEE", "SPP_MONTHLY"
  value       String   // Store as string, parse based on type
  type        String   // NUMBER, TEXT, BOOLEAN
  category    String   // FEES, NOTIFICATION, SYSTEM
  description String?
  updatedBy   String?  @map("updated_by") // User ID
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("system_settings")
}

model NotificationLog {
  id        String   @id @default(uuid())
  userId    String?  @map("user_id") // User who received notification
  type      String   // EMAIL, WHATSAPP, SMS
  status    String   // SENT, FAILED, PENDING
  recipient String   // Email or phone number
  subject   String?
  content   String   @db.Text
  template  String?  // Template name used
  metadata  String?  @db.Text // JSON string for additional data
  sentAt    DateTime? @map("sent_at")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("notification_logs")
}
