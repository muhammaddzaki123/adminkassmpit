// src/database/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum UserRole {
  TREASURER
  ADMIN
  PARENT
  HEADMASTER
}

enum StudentStatus {
  ACTIVE
  GRADUATED
  ARCHIVED
}

enum PaymentStatus {
  PAID
  PENDING
  UNPAID
  FAILED
  EXPIRED
}

enum PaymentType {
  SPP
  DAFTAR_ULANG
  LAINNYA
}

enum PaymentMethod {
  VIRTUAL_ACCOUNT
  TRANSFER_BANK
  EWALLET
  TUNAI
}

enum ExpenseStatus {
  APPROVED
  PENDING
  REJECTED
}

enum ExpenseCategory {
  GAJI
  ATK
  UTILITAS
  PEMELIHARAAN
  OPERASIONAL
  LAINNYA
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String?  @unique
  password  String
  nama      String
  role      UserRole
  studentId String?  @map("student_id")
  student   Student? @relation(fields: [studentId], references: [id])
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Student {
  id                String        @id @default(uuid())
  nama              String
  nisn              String        @unique
  kelas             String
  noTelp            String?       @map("no_telp")
  email             String?
  alamat            String?
  namaOrangTua      String?       @map("nama_orang_tua")
  status            StudentStatus @default(ACTIVE)
  sppStatus         PaymentStatus @default(UNPAID) @map("spp_status")
  daftarUlangStatus PaymentStatus @default(UNPAID) @map("daftar_ulang_status")
  virtualAccount    String?       @unique @map("virtual_account") // VA number for payments
  createdAt         DateTime      @default(now()) @map("created_at")
  updatedAt         DateTime      @updatedAt @map("updated_at")

  sppPayments       SPPPayment[]
  transactions      Transaction[]
  users             User[]

  @@map("students")
}

model SPPPayment {
  id               String        @id @default(uuid())
  studentId        String        @map("student_id")
  student          Student       @relation(fields: [studentId], references: [id])
  bulan            String // e.g., "November 2024" or date
  nominal          Float
  status           PaymentStatus @default(PENDING)
  tanggalBayar     DateTime?     @map("tanggal_bayar")
  metodePembayaran String?       @map("metode_pembayaran") // transfer, tunai, ewallet
  buktiTransfer    String?       @map("bukti_transfer")
  createdAt        DateTime      @default(now()) @map("created_at")
  updatedAt        DateTime      @updatedAt @map("updated_at")

  @@map("spp_payments")
}

model Expense {
  id          String          @id @default(uuid())
  date        DateTime
  category    ExpenseCategory
  description String
  amount      Float
  status      ExpenseStatus   @default(PENDING)
  receipt     String? // URL to receipt
  createdAt   DateTime        @default(now()) @map("created_at")
  updatedAt   DateTime        @updatedAt @map("updated_at")

  @@map("expenses")
}

model Transaction {
  id                String        @id @default(uuid())
  studentId         String        @map("student_id")
  student           Student       @relation(fields: [studentId], references: [id])
  paymentType       PaymentType   @map("payment_type")
  paymentMethod     PaymentMethod @map("payment_method")
  amount            Float
  adminFee          Float         @default(0) @map("admin_fee")
  totalAmount       Float         @map("total_amount")
  status            PaymentStatus @default(PENDING)
  externalId        String?       @unique @map("external_id") // ID from payment gateway
  vaNumber          String?       @map("va_number") // Virtual Account number
  expiredAt         DateTime?     @map("expired_at")
  paidAt            DateTime?     @map("paid_at")
  description       String?
  bulan             String? // For SPP payments
  tahunAjaran       String?       @map("tahun_ajaran")
  buktiPembayaran   String?       @map("bukti_pembayaran") // Receipt URL
  createdAt         DateTime      @default(now()) @map("created_at")
  updatedAt         DateTime      @updatedAt @map("updated_at")

  @@map("transactions")
}
